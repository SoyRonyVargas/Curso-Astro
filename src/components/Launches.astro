---
    import CardLaunch from './CardLaunch.astro';
    import { getLaunches } from '../lib/getLaunches'

    const docs = await getLaunches()
---
<section class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {
        docs.map( doc => (
            <CardLaunch 
                id={doc.id}
                name={doc.name}
                details={doc.details}
                img={doc.links.patch.small}
                success={doc.success}
                flightNumber={doc.flight_number}
            /> 
        ))
    }
</section>
