---
    import { type SpaceXAPIResponse } from '../types'
    import CardLaunch from './CardLaunch.astro';
    
    
    const response = await fetch("https://api.spacexdata.com/v5/launches/query", {
        method: "POST",
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            query: {},
            options: {
                sort: {
                    date_unix: 'asc'
                },
                limit: 12
            }
        })
    })

    const { docs } = await response.json() as SpaceXAPIResponse

    console.log(docs);
---
<section class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {
        docs.map( doc => (
            <CardLaunch 
                id={doc.id}
                name={doc.name}
                details={doc.details}
                img={doc.links.patch.small}
                success={doc.success}
                flightNumber={doc.flight_number}
            /> 
        ))
    }
</section>
